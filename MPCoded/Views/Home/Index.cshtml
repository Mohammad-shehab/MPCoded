@model MPCoded.Models.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Welcome";
}

<h1 class="text-center mt-4">
    Welcome, @Model.Account.FirstName @Model.Account.LastName
</h1>

<div class="text-center mt-3">
    <img src="@Model.Account.ProfilePicturePath" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px;" />
</div>

<p class="text-center mt-3" style="font-size: 24px;">
    Total Balance: @Model.Account.Balance.ToString("C")
</p>

<form asp-action="AddTransaction" asp-controller="Transaction" method="post" class="mx-auto mt-3 p-4 border rounded shadow" style="max-width: 600px;">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <h3 class="text-center mb-3">Transactions</h3>

    <div class="d-flex justify-content-center mb-3">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Transaction.TransactionType" id="Deposit" value="Deposit">
            <label class="form-check-label" for="Deposit">Deposit</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Transaction.TransactionType" id="Withdrawal" value="Withdrawal">
            <label class="form-check-label" for="Withdrawal">Withdrawal</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Transaction.Amount">Amount</label>
        <input asp-for="Transaction.Amount" class="form-control" />
        <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Transaction.Description">Description</label>
        <input asp-for="Transaction.Description" class="form-control" />
        <span asp-validation-for="Transaction.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-4 w-100">Submit</button>
</form>

<a asp-action="AccountDetails" asp-controller="Home" class="btn btn-primary btn-lg mt-4 d-block mx-auto" style="max-width: 200px;">Details</a>

<style>
    .styled-table {
        width: 50%;
        margin: auto;
        border-collapse: collapse;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .styled-table td {
            padding: 12px;
            border: 1px solid #ddd;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .styled-table tr:hover {
            background-color: #f1f1f1;
        }

    .form-group {
        margin-bottom: 1rem;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .text-center {
        text-align: center;
    }
</style>
