@model IEnumerable<UserCardViewModel>
@{
    ViewData["Title"] = "All Users";
}

<h2 class="text-center mt-4">All Users</h2>

<div class="d-flex flex-wrap justify-content-center mt-4">
    @foreach (var user in Model)
    {
        <div class="card m-2" style="width: 18rem;">
            <img src="@user.ProfilePicturePath" class="card-img-top" alt="Profile Picture">
            <div class="card-body text-center">
                <h5 class="card-title">@user.FirstName @user.LastName</h5>
                <p class="card-text">Balance: @user.Balance.ToString("C")</p>
                <a asp-action="Transfer" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-primary">Transfer</a>
            </div>
        </div>
    }
</div>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .card-img-top {
        border-radius: 5px 5px 0 0;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 2px 16px;
    }
</style>
