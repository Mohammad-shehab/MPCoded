@model MPCoded.Models.ViewModels.AccountDetailsViewModel

<h2>Account Details</h2>

<div>
    <img src="@Model.ProfilePicturePath" alt="Profile Picture" style="width: 150px; height: 150px;" />
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
    <p><strong>Civil ID:</strong> @Model.CivilID</p>
    <p><strong>Account Number:</strong> @Model.AccountNumber</p>
    <p><strong>Balance:</strong> @Model.Balance.ToString("C")</p>
</div>
